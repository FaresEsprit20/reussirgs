  <script>
    jQuery( document ).ready(function( $ ) {
        $("#valider").click(function () {
          if($("#lnum").val().length ==0){
            alert("Empty!");
          }else{
            if($("#lnum").val() == 8){
              
           $("#html").html('<div class="section-tittle text-center success"><h2 style="color:green">Bravo!</h2>	');
         document.getElementById('response').scrollIntoView();
            }else{
              $("#html").html('<div class="section-tittle text-center danger"><h2 style="color:red">Echec! la bonne réponse est 8</h2>	');
            document.getElementById('response').scrollIntoView();
            }
           
             $("input").prop("disabled",true);
              $(this).prop("disabled",true);
               $("#ok").attr("hidden",false);
          }
          $('#annuler').prop('disabled','true');
        });

    

 $("#ok").click(function () {
          $("#response").text("");
        });
    });


$(function(){
  var ff;
    var cpt = 0;
    //pour  selectionner les images et implémenter le compteur
    $('.img').on('click', function(evt) {
        ff = $(this);
      cpt+=2;
        $(".res").text(cpt);
      //capturer le click
        evt.stopPropagation();
        //rendre les images disabled aprés le click
        ff.css("pointer-events","none")
        ff.addClass('selectedd')
    }); 
     //pour annuler les clicks
      $('#annuler').on('click', function() {
      cpt = 0;
      $(".res").text(cpt);
        if (ff.length) {
           $('img').removeClass('selectedd');
           $('.img').css("pointer-events","auto");
           
        }

    });


  
});
 




